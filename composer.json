{
    "name": "nimp/link-loom-core",
    "authors": [
      {
        "name": "Yehor Konopka"
      }
    ],
    "description": "This package is designed to create short links and decode them back",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nimp\\LinkLoomCore\\": "src/"
        }
    },
    "minimum-stability": "RC",
    "require": {
      "php": "^8.3",
      "psr/event-dispatcher": "1.*"
    },
    "autoload-dev": {
      "psr-4": {
        "Nimp\\LinkLoomCore\\Tests\\": "tests/"
      }
    },
    "require-dev": {
      "phpunit/phpunit": "^11.2",
      "phpstan/phpstan": "^2.1",
      "nimp/observer": "^1.0"
    },
    "scripts": {
      "test": "phpunit --colors=always"
    }
}
